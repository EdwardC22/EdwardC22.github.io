{
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "strict": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "paths": {
            "@langs/*": [
                "./src/langs/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "src"
    ]
}